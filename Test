        for _, rep in mgr_reports.iterrows():
            if pd.notna(rep["Employee ID"]):
                rep_details = f"{rep['Employee Name']} | {rep.get('Position Title','')}\n{rep.get('GCB','')} | {rep.get('Country R3','')}"
                report_lines.append(f"\t{rep_details}")
