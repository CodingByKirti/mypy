Sub HighlightUnusedFormulas()
    Dim ws As Worksheet
    Dim rng As Range
    Dim cell As Range
    Dim formulaCells As Range
    Dim refCount As Integer

    ' Set the target worksheet (change the sheet name as needed)
    Set ws = ThisWorkbook.Sheets("Sheet1") ' Replace "Sheet1" with your target sheet name

    ' Find all formula cells in the worksheet
    On Error Resume Next
    Set formulaCells = ws.Cells.SpecialCells(xlCellTypeFormulas)
    On Error GoTo 0

    ' If no formula cells are found, exit the subroutine
    If formulaCells Is Nothing Then
        MsgBox "No formulas found in the worksheet.", vbInformation
        Exit Sub
    End If

    ' Loop through each formula cell to check if it's referenced
    For Each cell In formulaCells
        refCount = 0

        ' Check if the formula is referenced by any other cell in the worksheet
        Set rng = ws.UsedRange
        If Not rng Is Nothing Then
            refCount = WorksheetFunction.CountIf(rng, "=" & cell.Address)
        End If

        ' If not referenced, highlight the cell
        If refCount = 0 Then
            cell.Interior.Color = RGB(255, 199, 206) ' Highlight in light red color
        End If
    Next cell

    MsgBox "Unused formulas have been highlighted in red.", vbInformation
End Sub




,....

Sub DeleteUnusedFormulas()
    Dim ws As Worksheet
    Dim cell As Range
    Dim formulaCells As Range

    ' Set the target worksheet (change the sheet name as needed)
    Set ws = ThisWorkbook.Sheets("Sheet1") ' Replace "Sheet1" with your target sheet name

    ' Find all formula cells in the worksheet
    On Error Resume Next
    Set formulaCells = ws.Cells.SpecialCells(xlCellTypeFormulas)
    On Error GoTo 0

    ' If no formula cells are found, exit the subroutine
    If formulaCells Is Nothing Then
        MsgBox "No formulas found in the worksheet.", vbInformation
        Exit Sub
    End If

    ' Loop through each formula cell and delete the ones highlighted in light red
    For Each cell In formulaCells
        If cell.Interior.Color = RGB(255, 199, 206) Then
            cell.ClearContents  ' Delete only the formula, keeping other formatting intact
        End If
    Next cell

    MsgBox "Highlighted (unused) formulas have been deleted.", vbInformation
End Sub