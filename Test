def safe_float(val):
    try:
        # Convert to string and strip commas and spaces
        val_str = str(val).replace(',', '').strip()
        # Skip typical error strings
        if val_str.upper() in ['#VALUE!', '#DIV/0!', 'RECALC_ERROR', 'N/A', 'NA', '', '–']:
            return 0.0
        return float(val_str)
    except:
        return 0.0



